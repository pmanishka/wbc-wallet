<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
    xmlns:gap   = "http://phonegap.com/ns/1.0"
    id          = "driver.clapme.com"
    versionCode = "1" 
    version     = "1.0.0" >

    <!-- versionCode is optional and Android only -->

    <name>WBC</name>

    <description>
      World Bank Of CryptoCurrencies
    </description>

    <author href="http://www.intouchgroup.in" email="p.grover@intouchgroup.in">
      Priyanka Grover
    </author>
	
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
	<plugin name="phonegap-plugin-barcodescanner" />
	<plugin name="cordova-plugin-device" spec="~1.1.6" />
	<plugin name="cordova-plugin-geolocation" spec="~2.4.3" />
	<plugin name="cordova-plugin-contacts" spec="~2.3.1" />
	<plugin name="cordova-plugin-camera" spec="~2.4.1" />
	<plugin name="cordova-plugin-media-capture" spec="~1.4.3" />
	<plugin name="cordova-plugin-file-transfer" spec="~1.6.3" />
	<plugin name="cordova.plugins.diagnostic" source="npm" />
	<plugin name="cordova-plugin-dialogs" source="npm" />
	
	<edit-config target="NSCameraUsageDescription" file="*-Info.plist" mode="merge">
		<string>To scan barcodes</string>
	</edit-config>
	
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
